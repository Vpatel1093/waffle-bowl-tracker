# Copy to .env and fill in values

# Flask
FLASK_ENV=development

# Yahoo OAuth (Shared Authentication)
YAHOO_CLIENT_ID=your_client_id_here
YAHOO_CLIENT_SECRET=your_client_secret_here
YAHOO_REDIRECT_URI=https://localhost:8080/auth/callback

# Tokens (filled after running oauth_setup)
YAHOO_ACCESS_TOKEN=
YAHOO_REFRESH_TOKEN=

# Redis - when using docker compose this can remain as redis://redis:6379
REDIS_URL=redis://redis:6379
REDIS_HOST=redis

# League Configuration
LEAGUE_ID=your_league_id_here
WAFFLE_BOWL_TEAMS=6
CACHE_LIVE_SCORES=30
